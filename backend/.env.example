# ==============================================
# CONFIGURACIÓN BACKEND - SISTEMA DE RECLAMOS
# ==============================================

# ------------------
# Aplicación
# ------------------
NODE_ENV=development
PORT=3000
APP_NAME="Sistema de Reclamos Telecomunicaciones"
APP_URL=http://localhost:3000
FRONTEND_URL=http://localhost:5173

# ------------------
# Base de Datos (Supabase PostgreSQL)
# ------------------
DATABASE_URL="postgresql://usuario:password@host.supabase.co:5432/postgres?schema=public"

# ------------------
# Autenticación JWT
# ------------------
JWT_SECRET=tu-super-secreto-jwt-muy-largo-y-seguro-para-produccion-cambiar-esto
JWT_REFRESH_SECRET=tu-super-secreto-refresh-jwt-muy-largo-y-seguro-para-produccion-cambiar-esto
JWT_EXPIRATION=15m
JWT_REFRESH_EXPIRATION=7d

# ------------------
# Encriptación
# ------------------
BCRYPT_ROUNDS=12

# ------------------
# Archivos y Uploads
# ------------------
UPLOAD_PATH=./uploads
MAX_FILE_SIZE=10485760
# 10MB = 10 * 1024 * 1024

# ------------------
# Email (NodeMailer / SMTP)
# ------------------
EMAIL_ENABLED=false
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_SECURE=false
EMAIL_USER=tu-email@gmail.com
EMAIL_PASSWORD=tu-password-de-aplicacion
EMAIL_FROM=noreply@reclamos.com
EMAIL_FROM_NAME="Sistema de Reclamos"

# ------------------
# Telegram Bot
# ------------------
TELEGRAM_BOT_TOKEN=
TELEGRAM_WEBHOOK_URL=

# ------------------
# OneSignal (Push Notifications)
# ------------------
ONESIGNAL_APP_ID=
ONESIGNAL_API_KEY=
ONESIGNAL_REST_API_KEY=

# ------------------
# Redis (Caching y Jobs)
# ------------------
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0
REDIS_URL=redis://localhost:6379

# ------------------
# Logging
# ------------------
LOG_LEVEL=debug
LOG_FILE_PATH=./logs

# ------------------
# Sentry (Monitoreo de Errores)
# ------------------
SENTRY_DSN=
SENTRY_ENVIRONMENT=development

# ------------------
# Rate Limiting
# ------------------
THROTTLE_TTL=60
THROTTLE_LIMIT=100

# ------------------
# CORS
# ------------------
CORS_ORIGIN=http://localhost:5173,http://localhost:3000
CORS_CREDENTIALS=true

# ------------------
# Swagger API Docs
# ------------------
SWAGGER_ENABLED=true
SWAGGER_PATH=api/docs

# ------------------
# Timezone
# ------------------
TZ=America/Asuncion

# ------------------
# Supabase (Opcional - para Storage)
# ------------------
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=your-anon-key
SUPABASE_SERVICE_KEY=your-service-role-key

# ==============================================
# NOTAS IMPORTANTES:
# ==============================================
# 1. Copia este archivo como .env y completa los valores
# 2. NUNCA commitees el archivo .env en Git
# 3. En producción, usa valores seguros y diferentes
# 4. Los secretos JWT deben ser strings largos aleatorios
# 5. Para emails, usa App Passwords si usas Gmail
# 6. Ejecuta "npm run prisma:seed" para poblar datos de prueba
# ==============================================
